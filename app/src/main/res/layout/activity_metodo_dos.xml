<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.metodosnumericos.MetodoDos">


    <TextView
        android:id="@+id/resultadoGJ"
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:layout_above="@+id/back"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:textAlignment="center"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/matrizzGJ"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Lista"
        android:inputType="numberSigned"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_above="@+id/btnLista"
        android:layout_alignLeft="@+id/btnLista"
        android:layout_alignStart="@+id/btnLista" />

    <EditText
        android:id="@+id/errorTxt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Error"
        android:inputType="numberDecimal"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_above="@+id/btnLista"
        android:layout_alignLeft="@+id/botonError"
        android:layout_alignStart="@+id/botonError" />

    <EditText
        android:id="@+id/numero"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Matriz"
        android:inputType="numberSigned"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/tamanoGJ"
        android:layout_alignBottom="@+id/tamanoGJ"
        android:layout_alignLeft="@+id/btnMatriz"
        android:layout_alignStart="@+id/btnMatriz" />

    <Button
        android:id="@+id/btnLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:layout_marginBottom="54dp"
        android:layout_above="@+id/resultadoGJ"
        android:layout_alignLeft="@+id/resultadoGJ"
        android:layout_alignStart="@+id/resultadoGJ" />

    <Button
        android:id="@+id/btnMatriz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:layout_below="@+id/tamanoGJ"
        android:layout_alignLeft="@+id/errorTxt"
        android:layout_alignStart="@+id/errorTxt" />

    <Button
        android:id="@+id/matrizGauss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:layout_below="@+id/tamanoGJ"
        android:layout_alignLeft="@+id/tamanoGJ"
        android:layout_alignStart="@+id/tamanoGJ" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="11dp" />

    <Button
        android:id="@+id/gauss_seidel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/back"
        android:layout_toLeftOf="@+id/botonError"
        android:layout_toStartOf="@+id/botonError"
        android:text="Calcular" />

    <EditText
        android:id="@+id/tamanoGJ"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="TamaÃ±o"
        android:inputType="number"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/matrizzGJ"
        android:layout_alignStart="@+id/matrizzGJ" />

    <Button
        android:id="@+id/botonError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error"
        android:layout_below="@+id/errorTxt"
        android:layout_alignRight="@+id/resultadoGJ"
        android:layout_alignEnd="@+id/resultadoGJ" />


</RelativeLayout>
