<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.metodosnumericos.MetodoDos">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               >


                <EditText
                    android:id="@+id/tamanoGJ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft=".05dp"
                    android:layout_marginRight=".05dp"
                    android:layout_weight="0.5"
                    android:ems="10"
                    android:hint="TamaÃ±o"
                    android:inputType="number"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/matrizzGJ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft=".05dp"
                    android:layout_marginRight=".05dp"
                    android:layout_weight="0.5"
                    android:ems="10"
                    android:hint="Lista"
                    android:inputType="numberSigned"
                    android:textAlignment="center" />

            </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_weight=".1"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btnTamano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft=".05dp"
            android:layout_marginRight=".05dp"
            android:layout_weight="0.5"
            android:text="Enter" />

        <Button
            android:id="@+id/btnLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft=".05dp"
            android:layout_marginRight=".05dp"
            android:layout_weight="0.5"
            android:text="Enter" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <EditText
            android:id="@+id/numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Matriz"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:layout_marginLeft=".05dp"
            android:layout_marginRight=".05dp"
            android:layout_weight="0.5"/>

        <EditText
            android:id="@+id/errorTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Error"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:layout_marginLeft=".05dp"
            android:layout_marginRight=".05dp"
            android:layout_weight="0.5"/>
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btnMatriz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft=".05dp"
            android:layout_marginRight=".05dp"
            android:layout_weight="0.5"
            android:text="Enter" />

        <Button
            android:id="@+id/botonError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error"
            android:layout_marginLeft=".05dp"
            android:layout_marginRight=".05dp"
            android:layout_weight="0.5"/>
</TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/resultadoGJ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textAlignment="center"
            android:textSize="15sp" />

    </TableRow>
    </TableLayout>

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
       />

    <Button
        android:id="@+id/gauss_seidel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
