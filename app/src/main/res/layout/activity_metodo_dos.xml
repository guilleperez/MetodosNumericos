<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.metodosnumericos.MetodoDos">


    <TextView
        android:id="@+id/resultado"
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:layout_above="@+id/back"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/lista"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Lista"
        android:inputType="numberSigned"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/btnLista"
        android:layout_alignLeft="@+id/btnLista"
        android:layout_alignStart="@+id/btnLista" />

    <EditText
        android:id="@+id/errorTxt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lista"
        android:layout_alignBottom="@+id/lista"
        android:layout_alignLeft="@+id/botonError"
        android:layout_alignStart="@+id/botonError"
        android:ems="10"
        android:hint="Error"
        android:inputType="numberDecimal"
        android:singleLine="false"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/numero"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnMatriz"
        android:layout_alignRight="@+id/btnMatriz"
        android:layout_alignTop="@+id/tamano"
        android:ems="10"
        android:hint="Matriz"
        android:inputType="numberSigned"
        android:singleLine="false"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/resultado"
        android:layout_alignStart="@+id/resultado" />

    <Button
        android:id="@+id/btnMatriz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:layout_below="@+id/tamano"
        android:layout_alignLeft="@+id/lista"
        android:layout_alignStart="@+id/lista" />

    <Button
        android:id="@+id/listaEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:layout_below="@+id/tamano"
        android:layout_alignLeft="@+id/botonError"
        android:layout_alignStart="@+id/botonError"
        android:layout_marginTop="12dp" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/back"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/numero"
        android:layout_alignStart="@+id/numero" />

    <Button
        android:id="@+id/gauss_seidel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/resultado"
        android:layout_alignEnd="@+id/resultado"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/tamano"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="TamaÃ±o"
        android:inputType="number"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/listaEnter"
        android:layout_alignStart="@+id/listaEnter" />

    <Button
        android:id="@+id/botonError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error"
        android:layout_alignBaseline="@+id/btnLista"
        android:layout_alignBottom="@+id/btnLista"
        android:layout_alignLeft="@+id/gauss_seidel"
        android:layout_alignStart="@+id/gauss_seidel" />


</RelativeLayout>
