<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.metodosnumericos.MetodoCinco">


    <Button
        android:id="@+id/enterTamGJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar"
        android:layout_alignBaseline="@+id/tamanoGJ"
        android:layout_alignBottom="@+id/tamanoGJ"
        android:layout_alignLeft="@+id/matrizGauss"
        android:layout_alignStart="@+id/matrizGauss" />

    <EditText
        android:id="@+id/matrizzGJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Datos de la matriz"
        android:inputType="numberSigned"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_below="@+id/enterTamGJ"
        android:layout_alignLeft="@+id/tamanoGJ"
        android:layout_alignStart="@+id/tamanoGJ"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/matrizGauss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar"
        android:layout_alignBottom="@+id/matrizzGJ"
        android:layout_toRightOf="@+id/gaussJordanBtn"
        android:layout_toEndOf="@+id/gaussJordanBtn"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:background="@mipmap/back"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/matrizzGJ"
        android:layout_alignStart="@+id/matrizzGJ" />

    <Button
        android:id="@+id/gaussJordanBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/back"
        android:layout_centerHorizontal="true"
        android:text="Calcular" />

    <EditText
        android:id="@+id/tamanoGJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="TamaÃ±o de la matriz"
        android:inputType="number"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/resultadoGJ"
        android:layout_width="280dp"
        android:layout_height="240dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_above="@+id/back"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

</RelativeLayout>

