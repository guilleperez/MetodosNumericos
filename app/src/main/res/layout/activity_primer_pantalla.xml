<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    tools:context="mx.itesm.metodosnumericos.PrimerPantalla">

    <Button
        android:text="Cramer"
        android:layout_width="wrap_content"
        android:id="@+id/botonUno"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="60dp"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_marginTop="20dp"
        />

    <Button
        android:text="Gauss Seidel"
        android:layout_width="wrap_content"
        android:id="@+id/botonDos"
        android:layout_below="@+id/botonUno"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="60dp"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        />


    <Button
        android:text="Gauss"
        android:layout_width="wrap_content"
        android:id="@+id/botonTres"
        android:layout_below="@+id/botonDos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="60dp"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        />


    <Button
        android:text="Determinante"
        android:layout_width="wrap_content"
        android:layout_below="@+id/botonTres"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/botonCuatro"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="60dp"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        />

    <Button
        android:text="Gauss Jordan"
        android:layout_width="wrap_content"
        android:layout_below="@+id/botonCuatro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/botonCinco"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="60dp"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        />

    <Button
        android:text="Bairstow"
        android:layout_width="wrap_content"
        android:layout_below="@+id/botonCinco"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/botonSeis"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="60dp"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
