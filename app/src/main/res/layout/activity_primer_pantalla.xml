<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
  >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <Button
        android:id="@+id/botonUno"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_column="1"
        android:layout_marginTop="32dp"
        android:layout_row="12"
        android:layout_weight="1"
        android:backgroundTint="@android:color/darker_gray"
        android:text="CRAMER"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/botonCinco"
        android:layout_alignStart="@+id/botonCinco" />

    <Button
        android:id="@+id/botonDos"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Gauss Seidel"
        android:layout_below="@+id/botonUno"
        android:layout_alignLeft="@+id/botonUno"
        android:layout_alignStart="@+id/botonUno" />

    <Button
        android:id="@+id/botonTres"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Gauss"
        android:layout_below="@+id/botonDos"
        android:layout_alignLeft="@+id/botonDos"
        android:layout_alignStart="@+id/botonDos" />


    <Button
        android:id="@+id/botonCuatro"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/botonTres"
        android:layout_alignStart="@+id/botonTres"
        android:layout_below="@+id/botonTres"
        android:layout_marginTop="21dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Determinante" />

    <Button
        android:id="@+id/botonCinco"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/botonSeis"
        android:layout_alignStart="@+id/botonSeis"
        android:layout_below="@+id/botonCuatro"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="GaussJordan" />

    <Button
        android:id="@+id/botonSeis"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/botonCinco"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Bairstow" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/back"
        android:layout_marginLeft="10dp"
        />
</LinearLayout>
</ScrollView>