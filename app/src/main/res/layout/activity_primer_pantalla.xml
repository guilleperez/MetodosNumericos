<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    tools:context="mx.itesm.metodosnumericos.PrimerPantalla">

    <Button
        android:id="@+id/botonUno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginTop="127dp"
        android:layout_row="12"
        android:layout_weight="1"
        android:backgroundTint="@android:color/darker_gray"
        android:text="CRAMER"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="124dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/botonDos"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/botonUno"
        android:layout_alignStart="@+id/botonUno"
        android:layout_below="@+id/botonUno"
        android:layout_marginTop="64dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Gauss Seidel" />

    <Button
        android:id="@+id/botonTres"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="METODO 3"
        android:layout_below="@+id/botonDos"
        android:layout_alignLeft="@+id/botonDos"
        android:layout_alignStart="@+id/botonDos" />

</RelativeLayout>
