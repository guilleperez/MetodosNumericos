<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.metodosnumericos.Determinante">


    <Button
        android:id="@+id/enterTamano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/matrizGauss"
        android:layout_alignStart="@+id/matrizGauss"
        android:layout_alignTop="@+id/tamanoGJ"
        android:text="Insertar" />

    <EditText
        android:id="@+id/matrizzGJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Datos de la matriz"
        android:inputType="numberSigned"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/enterTamano"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/matrizGauss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/matrizzGJ"
        android:layout_alignBottom="@+id/matrizzGJ"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/matrizzGJ"
        android:layout_toRightOf="@+id/matrizzGJ"
        android:text="Insertar" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@mipmap/back"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/matrizzGJ"
        android:layout_alignStart="@+id/matrizzGJ"
        android:layout_marginBottom="26dp" />

    <Button
        android:id="@+id/cramerBoton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/back"
        android:layout_centerHorizontal="true"
        android:text="Calcular" />

    <EditText
        android:id="@+id/tamanoGJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="TamaÃ±o de la matriz"
        android:inputType="number"
        android:singleLine="false"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/matrizGauss"
        android:layout_toStartOf="@+id/matrizGauss" />

    <TextView
        android:id="@+id/resultadoGJ"
        android:layout_width="280dp"
        android:layout_height="240dp"
        android:layout_below="@+id/matrizGauss"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20sp" />


</RelativeLayout>
