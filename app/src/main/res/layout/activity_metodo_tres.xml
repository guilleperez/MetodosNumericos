<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.metodosnumericos.MetodoTres">


    <Button
        android:id="@+id/tamanoBtnG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar"
        android:layout_alignTop="@+id/tamanoG"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

    <EditText
        android:id="@+id/matrizG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Datos de la matriz"
        android:inputType="number|numberSigned|numberDecimal"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tamanoBtnG"
        android:layout_alignLeft="@+id/tamanoG"
        android:layout_alignStart="@+id/tamanoG" />

    <EditText
        android:id="@+id/tamanoG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="TamaÃ±o de la matriz"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/back"
        android:layout_alignStart="@+id/back" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:background="@mipmap/back"
        android:layout_alignTop="@+id/gaussBoton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/gaussBoton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />

    <TextView
        android:id="@+id/resultadoG"
        android:layout_width="280dp"
        android:layout_height="240dp"
        android:layout_below="@+id/matrizG"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <Button
        android:id="@+id/matrizBtnG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar"
        android:layout_alignBottom="@+id/matrizG"
        android:layout_alignLeft="@+id/tamanoBtnG"
        android:layout_alignStart="@+id/tamanoBtnG" />


</RelativeLayout>
