<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.metodosnumericos.NewRaphsonPantalla">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:background="@mipmap/back" />

    <EditText
        android:id="@+id/aproximacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tolerancia"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tolerancia"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Primera aproximaciÃ³n"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="center" />

    <Button
        android:id="@+id/aproxBoton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aproximacion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Enter" />

    <Button
        android:id="@+id/toleranciaBoton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="enter"
        android:layout_below="@+id/tolerancia"
        android:layout_alignLeft="@+id/aproxBoton"
        android:layout_alignStart="@+id/aproxBoton" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/ok"
        android:layout_alignBottom="@+id/back"
        android:layout_alignLeft="@+id/toleranciaBoton"
        android:layout_alignStart="@+id/toleranciaBoton" />

    <EditText
        android:id="@+id/tolerancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aproxBoton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:hint="Tolerancia"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:layout_below="@+id/toleranciaBoton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

</RelativeLayout>
